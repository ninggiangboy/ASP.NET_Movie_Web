@page
@model Group06_Project.RazorPage.Areas.Admin.Pages.Catalog.Index

@{
    ViewData["Title"] = "Films";
    ViewData["Search"] = Model.Search;

    var totalPages = Model.FilmItems.TotalPage;
    var currentPage = Model.FilmItems.PageNumber;
    var startPage = currentPage - 2;
    var endPage = currentPage + 2;

    if (totalPages >= 7)
    {
        if (startPage < 1)
        {
            endPage += Math.Abs(startPage) + 1;
            startPage = 1;
        }

        if (endPage > totalPages)
        {
            startPage -= endPage - totalPages;
            if (startPage < 1)
            {
                startPage = 1;
            }

            endPage = totalPages;
        }
    }
    else
    {
        startPage = 1;
        endPage = totalPages;
    }
}

<div class="container-fluid">
<div class="row">
    <!-- main title -->
    <div class="col-12">
        <div class="main__title">
            <h2>Catalog</h2>

            <span class="main__title-stat">@Model.FilmItems.TotalElement.ToString("N0") total</span>

            <div class="main__title-wrap">
                <!-- filter sort -->
                <div class="filter" id="filter__sort">
                    <span class="filter__item-label">Sort by:</span>

                    <div class="filter__item-btn dropdown-toggle" role="navigation" id="filter-sort"
                         data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        <input type="button" value=@Model.SortOptions.FirstOrDefault(s => s.Value == Model.Sort)?.Text>
                        <span></span>
                    </div>

                    <ul class="filter__item-menu dropdown-menu scrollbar-dropdown" aria-labelledby="filter-sort">
                        @foreach (var sortOption in Model.SortOptions)
                        {
                        <li>
                            <a asp-page-handler="Sort" 
                               asp-route-sort="@sortOption.Value"
                               asp-route-search="@Model.Search"
                               >@sortOption.Text</a>
                        </li>
                        }
                    </ul>
                </div>
                <!-- end filter sort -->

                <!-- search -->
                <form method="post" class="main__title-form">
                    <input type="text" placeholder="Find movie / tv series.." name="Search" value="@Model.Search">
                    <input type="hidden" name="Sort" value="@Model.Sort">
                    <button type="submit">
                        <svg width="18" height="18" viewBox="0 0 18 18" fill="none" xmlns="http://www.w3.org/2000/svg">
                            <circle cx="8.25998" cy="8.25995" r="7.48191" stroke="#2F80ED" stroke-width="1.5"
                                    stroke-linecap="round" stroke-linejoin="round"></circle>
                            <path d="M13.4637 13.8523L16.3971 16.778" stroke="#2F80ED" stroke-width="1.5"
                                  stroke-linecap="round" stroke-linejoin="round"></path>
                        </svg>
                    </button>
                </form>
                <!-- end search -->
            </div>
        </div>
    </div>
    <!-- end main title -->

<!-- users -->
<div class="col-12">
    <div class="main__table-wrap">
        <table class="main__table">
            <thead>
            <tr>
                <th>ID</th>
                <th>TITLE</th>
                <th>RATING</th>
                <th>GENRE</th>
                <th>VIEWS</th>
                <th>ACTIONS</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var filmItem in Model.FilmItems.Data)
            {
            <tr>
                <td>
                    <div class="main__table-text">@filmItem.Id</div>
                </td>
                <td>
                    <div class="main__table-text"><a asp-page="/Film/Details" asp-route-id="@filmItem.Id">@filmItem.Title</a></div>
                </td>
                <td>
                    <div class="main__table-text main__table-text--rate"><svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
                            <path d="M22,9.67A1,1,0,0,0,21.14,9l-5.69-.83L12.9,3a1,1,0,0,0-1.8,0L8.55,8.16,2.86,9a1,1,0,0,0-.81.68,1,1,0,0,0,.25,1l4.13,4-1,5.68A1,1,0,0,0,6.9,21.44L12,18.77l5.1,2.67a.93.93,0,0,0,.46.12,1,1,0,0,0,.59-.19,1,1,0,0,0,.4-1l-1-5.68,4.13-4A1,1,0,0,0,22,9.67Zm-6.15,4a1,1,0,0,0-.29.88l.72,4.2-3.76-2a1.06,1.06,0,0,0-.94,0l-3.76,2,.72-4.2a1,1,0,0,0-.29-.88l-3-3,4.21-.61a1,1,0,0,0,.76-.55L12,5.7l1.88,3.82a1,1,0,0,0,.76.55l4.21.61Z"/>
                        </svg> @filmItem.AverageRating.ToString("F1")</div>
                </td>
                <td>
                    <div class="main__table-text">@filmItem.Genres.FirstOrDefault()?.Label</div>
                </td>
                <td>
                    <div class="main__table-text">@filmItem.TotalView</div>
                </td>
                <td>
                    <div class="main__table-btns">
                        <a asp-page="./Update" asp-route-id="@filmItem.Id" class="main__table-btn main__table-btn--edit">
                            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
                                <path d="M22,7.24a1,1,0,0,0-.29-.71L17.47,2.29A1,1,0,0,0,16.76,2a1,1,0,0,0-.71.29L13.22,5.12h0L2.29,16.05a1,1,0,0,0-.29.71V21a1,1,0,0,0,1,1H7.24A1,1,0,0,0,8,21.71L18.87,10.78h0L21.71,8a1.19,1.19,0,0,0,.22-.33,1,1,0,0,0,0-.24.7.7,0,0,0,0-.14ZM6.83,20H4V17.17l9.93-9.93,2.83,2.83ZM18.17,8.66,15.34,5.83l1.42-1.41,2.82,2.82Z"/>
                            </svg>
                        </a>
                        <a  class="main__table-btn main__table-btn--view">
                            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
                                <path d="M21.92,11.6C19.9,6.91,16.1,4,12,4S4.1,6.91,2.08,11.6a1,1,0,0,0,0,.8C4.1,16.09,7.9,19,12,19s7.9-2.91,9.92-7.6A1,1,0,0,0,21.92,11.6ZM12,17a5,5,0,1,1,5-5A5,5,0,0,1,12,17ZM9,7A3,3,0,0,0,6,10a3,3,0,0,0,3,3,3,3,0,0,0,3-3A3,3,0,0,0,9,7Zm6,0a3,3,0,0,0-3,3,3,3,0,0,0,3,3,3,3,0,0,0,3-3A3,3,0,0,0,15,7Z"/>
                            </svg>
                        </a>
                        <a asp-page="./Delete" asp-route-id="@filmItem.Id" class="main__table-btn main__table-btn--delete">
                            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
                                <path d="M10,18a1,1,0,0,0,1-1V11a1,1,0,0,0-2,0v6A1,1,0,0,0,10,18ZM20,6H16V5a3,3,0,0,0-3-3H11A3,3,0,0,0,8,5V6H4A1,1,0,0,0,4,8H5V19a3,3,0,0,0,3,3h8a3,3,0,0,0,3-3V8h1a1,1,0,0,0,0-2ZM10,5a1,1,0,0,1,1-1h2a1,1,0,0,1,1,1V6H10Zm7,14a1,1,0,0,1-1,1H8a1,1,0,0,1-1-1V8H17Zm-3-1a1,1,0,0,0,1-1V11a1,1,0,0,0-2,0v6A1,1,0,0,0,14,18Z"/>
                            </svg>
                        </a>
                    </div>
                </td>
            </tr>
            }
            </tbody>
        </table>
    </div>
</div>
<!-- end users -->

<!-- paginator -->
<div class="col-12">
    <div class="paginator">
        <ul class="paginator__paginator">
            @if (Model.FilmItems.HasPrevious)
            {
            <li>
                <a asp-page="./Index"
                   asp-route-PageNo="@(currentPage - 1)"
                   asp-route-Genre="@Model.Genre"
                   asp-route-Country="@Model.Country"
                   asp-route-Sort="@Model.Sort"
                   asp-route-Search="@Model.Search">
                    <svg width="14" height="11" viewBox="0 0 14 11" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <path d="M0.75 5.36475L13.1992 5.36475" stroke-width="1.2" stroke-linecap="round" stroke-linejoin="round"/><path d="M5.771 10.1271L0.749878 5.36496L5.771 0.602051" stroke-width="1.2" stroke-linecap="round" stroke-linejoin="round"/>
                    </svg>
                </a>
            </li>
            }

            @if (startPage > 1)
            {
            <li>
                <a asp-page="./Index"
                   asp-route-PageNo="1"
                   asp-route-Genre="@Model.Genre"
                   asp-route-Country="@Model.Country"
                   asp-route-Sort="@Model.Sort"
                   asp-route-Search="@Model.Search">
                    1
                </a>
            </li>
            }
            @if (startPage > 2)
            {
            <li>
                <span>...</span>
            </li>
            }
            @for (var i = startPage; i <= endPage; i++)
            {
            <li class="@(currentPage == i ? "active" : "")">
                <a asp-page="./Index"
                   asp-route-PageNo="@i"
                   asp-route-Genre="@Model.Genre"
                   asp-route-Country="@Model.Country"
                   asp-route-Sort="@Model.Sort"
                   asp-route-Search="@Model.Search">
                    @i
                </a>
            </li>
            }
            @if (endPage < totalPages - 1)
            {
            <li>
                <span>...</span>
            </li>
            }
            @if (endPage < totalPages)
            {
            <li>
                <a asp-page="./Index"
                   asp-route-PageNo="@totalPages"
                   asp-route-Genre="@Model.Genre"
                   asp-route-Country="@Model.Country"
                   asp-route-Sort="@Model.Sort"
                   asp-route-Search="@Model.Search">
                    @totalPages
                </a>
            </li>
            }
            @if (Model.FilmItems.HasNext)
            {
                <li>
                    <a asp-page="./Index"
                       asp-route-PageNo="@(currentPage + 1)"
                       asp-route-Genre="@Model.Genre"
                       asp-route-Country="@Model.Country"
                       asp-route-Sort="@Model.Sort"
                        asp-route-Search="@Model.Search">
                        <svg width="14" height="11" viewBox="0 0 14 11" fill="none" xmlns="http://www.w3.org/2000/svg">
                            <path d="M13.1992 5.3645L0.75 5.3645" stroke-width="1.2" stroke-linecap="round" stroke-linejoin="round"/><path d="M8.17822 0.602051L13.1993 5.36417L8.17822 10.1271" stroke-width="1.2" stroke-linecap="round" stroke-linejoin="round"/>
                        </svg>
                    </a>
                </li>
            }
        </ul>
    </div>
</div>
<!-- end paginator -->
</div>
</div>
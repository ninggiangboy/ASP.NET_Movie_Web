@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
    Layout = "_IdentityLayout";
}
<form id="account" method="post">
    <div asp-validation-summary="ModelOnly" class="sign__alert"></div>
    <div class="sign__group">
        <input type="email" asp-for="Input.Email" class="sign__input" aria-required="true" placeholder="Email">
        <span asp-validation-for="Input.Email" class="text-danger invalid-message"></span>
    </div>
    <div class="sign__group">
        <input type="password" asp-for="Input.Password" class="sign__input" aria-required="true" placeholder="Password">
        <span asp-validation-for="Input.Password" class="text-danger invalid-message"></span>
    </div>

    <div class="sign__group sign__group--checkbox">
        <input id="remember" name="remember" type="checkbox" checked="checked" asp-for="Input.RememberMe">
        <label for="remember">Remember Me</label>
    </div>

    <button class="sign__btn" type="submit">Sign in</button>
</form>
<span class="sign__delimiter">or</span>

<form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="sign__social">
    <button class="fb" name="provider" value="Facebook" type="submit">
        <svg viewBox="0 0 9 17" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M5.56341 16.8197V8.65888H7.81615L8.11468 5.84663H5.56341L5.56724 4.43907C5.56724 3.70559 5.63693 3.31257 6.69042 3.31257H8.09873V0.5H5.84568C3.1394 0.5 2.18686 1.86425 2.18686 4.15848V5.84695H0.499939V8.6592H2.18686V16.8197H5.56341Z"/>
        </svg>
    </button>
    <button class="gl" name="provider" value="Google" type="submit">
        <svg xmlns="http://www.w3.org/2000/svg" class="ionicon" viewBox="0 0 512 512">
            <path d="M473.16 221.48l-2.26-9.59H262.46v88.22H387c-12.93 61.4-72.93 93.72-121.94 93.72-35.66 0-73.25-15-98.13-39.11a140.08 140.08 0 01-41.8-98.88c0-37.16 16.7-74.33 41-98.78s61-38.13 97.49-38.13c41.79 0 71.74 22.19 82.94 32.31l62.69-62.36C390.86 72.72 340.34 32 261.6 32c-60.75 0-119 23.27-161.58 65.71C58 139.5 36.25 199.93 36.25 256s20.58 113.48 61.3 155.6c43.51 44.92 105.13 68.4 168.58 68.4 57.73 0 112.45-22.62 151.45-63.66 38.34-40.4 58.17-96.3 58.17-154.9 0-24.67-2.48-39.32-2.59-39.96z"/>
        </svg>
    </button>
</form>
<span class="sign__text">Don't have an account? <a id="register" asp-page="./Register">Sign up!</a></span>

<span class="sign__text">
    <a id="forgot-password" asp-page="./ForgotPassword">Forgot password?</a>
</span>
@page
@model LogoutModel
@{
    ViewData["Title"] = "Log out";
    Layout = "_IdentityLayout";
}

<header>
    @{
        if (User.Identity?.IsAuthenticated ?? false)
        {
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
                <button type="submit" class="nav-link btn btn-link text-dark sign__text">Click here to Logout</button>
            </form>
        }
        else
        {
            <p class="sign__text">You have successfully logged out of the application.</p>
        }
    }
</header>
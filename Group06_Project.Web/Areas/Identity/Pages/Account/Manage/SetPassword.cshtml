<div class="tab-pane fade show active" role="tabpanel">
    <div class="row">
        <div class="col-12">
            <div class="sign__wrap">
                <div class="row">
                    <!-- password form -->
                    <div class="col-12">
                        <form action="#" class="sign__form sign__form--profile">
                            <div class="row">
                                <div class="col-12">
                                    <h4 class="sign__title">Set your password</h4>
                                    <p class="sign__text_start">You do not have a local username/password for this site. Add a local account so you can log in without an external login.</p>
                                </div>
                                <div class="col-12 col-md-6">
                                    <div class="sign__group">
                                        <label class="sign__label" for="newpass">New password</label>
                                        <input id="newpass" type="password" name="newpass" class="sign__input">
                                    </div>
                                </div>

                                <div class="col-12  col-md-6">
                                    <div class="sign__group">
                                        <label class="sign__label" for="confirmpass">Confirm new password</label>
                                        <input id="confirmpass" type="password" name="confirmpass" class="sign__input">
                                    </div>
                                </div>
                                <div class="col-12">
                                    <button class="sign__btn" type="button">Change</button>
                                </div>
                            </div>
                        </form>
                    </div>
                    <!-- end password form -->
                </div>
            </div>
        </div>
    </div>
</div>


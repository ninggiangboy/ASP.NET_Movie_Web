@page
@model IndexModel
@{
    ViewData["Title"] = "Home Page";
}

<section class="section section--pb0">
    <div class="container">
        <div class="row row--grid">
            @foreach (var item in Model.CountryItems)
            {
                <div class="col">
                    <a asp-page="/Film/Index" asp-route-Country="@item.Id" class="category">
                        <div class="category__cover">
                            <img src="@item.Image" alt="">
                        </div>
                        <h3 class="category__title">@item.Name</h3>
                        <span class="category__value">@item.TotalItem</span>
                    </a>
                </div>
            }
        </div>
    </div>
</section>
<section class="section section--pb0">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="section__carousel-wrap">
                    <div class="section__live owl-carousel" id="recommended">
                        @foreach (var item in Model.GenreItems)
                        {
                            <div class="live">
                                <a asp-page="/Film/Index" asp-route-Genre="@item.Id" class="live__cover">
                                    <img src="@item.Image" alt="@item.Name"/>
                                    <span class="live__status">@item.TotalItem</span>
                                    <span class="live__value">
                                        @item.Name
                                    </span>
                                </a>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<section class="catalog">

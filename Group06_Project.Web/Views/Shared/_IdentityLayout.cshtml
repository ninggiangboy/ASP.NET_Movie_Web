@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<section class="sign section--full-bg">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="sign__content">
                    <div action="#" class="sign__form">
                        <a asp-action="Index" class="sign__logo">
                            <img src="~/img/logo.svg" alt="">
                        </a>
                        @RenderBody()
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial"/>
}